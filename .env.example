# LLM Configuration
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
TEMPERATURE=0.7

# Rate Limiting (seconds between API calls - helps prevent 429 errors)
# Set to 0 to disable rate limiting
# Recommended: 0.5 for gemini-2.5-flash (15/min), 3.0 for gemini-2.5-pro (2/min)
MIN_DELAY_BETWEEN_CALLS=0.5

# Booking Configuration
IXORA_BOOKING_URL=

# LangSmith (Optional - for debugging)
LANGSMITH_TRACING=
LANGSMITH_ENDPOINT=
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./ixora_chat.db

# For production (PostgreSQL) - Uncomment and configure:
# DATABASE_URL=postgresql://ixora:changeme@postgres:5432/ixora_chat
# POSTGRES_DB=ixora_chat
# POSTGRES_USER=ixora
# POSTGRES_PASSWORD=changeme

# Redis Configuration (Session Management - Production)
# REDIS_URL=redis://:changeme@redis:6379/0
# REDIS_PASSWORD=changeme

# Admin Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Vector Store Configuration (Gemini Embeddings)
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=models/embedding-001

# RAG Configuration
# Set to true to disable RAG (useful when embedding API quota is exhausted)
# When disabled, company info queries will get a simple fallback response
DISABLE_RAG=false

# Frontend Configuration
VITE_API_URL=http://localhost:8000